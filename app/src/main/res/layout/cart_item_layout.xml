<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/favorite_item_vertical_padding"
        android:paddingLeft="@dimen/item_cart_padding"
        android:paddingRight="@dimen/item_cart_padding"
        android:paddingTop="@dimen/item_cart_vertical_padding">

        <ImageView
            android:id="@+id/item_cart_iv_image"
            android:layout_width="@dimen/item_cart_iv_image_width"
            android:layout_height="@dimen/item_cart_iv_image_width"
            android:layout_marginRight="8dp"
            android:contentDescription="Gambar shop"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/item_cart_ll_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_cart_tv_item_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textSize="@dimen/text_size_medium_16"
                    tools:text="Sepatu Bata" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/main_padding_extra_very_small_3dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_cart_tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|right"
                        android:gravity="right"
                        android:textSize="@dimen/text_size_medium_16"
                        tools:text="Rp 15.000" />

                    <TextView
                        android:id="@+id/item_cart_tv_commission_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|right"
                        android:gravity="right"
                        android:textSize="@dimen/text_size_extra_small"
                        android:textColor="@color/colorAccent"
                        tools:text="Komisi @ 12.000" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_padding_extra_very_small"
                android:gravity="bottom"
                android:textSize="@dimen/text_size_extra_small" />

            <RelativeLayout
                android:id="@+id/item_cart_ll_action_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_padding_extra_very_small"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/item_cart_iv_subs_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    app:srcCompat="@drawable/btn_stepper_minus" />

                <LinearLayout
                    android:id="@+id/layout_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/main_padding_very_small"
                    android:layout_marginRight="@dimen/main_padding_very_small"
                    android:layout_toRightOf="@id/item_cart_iv_subs_qty"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_cart_tv_quantity"
                        android:layout_width="@dimen/item_cart_tv_quantity_width"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        tools:text="1" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="1dp"
                        android:background="@color/primary_light_grey" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/item_cart_iv_add_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/layout_quantity"
                    android:background="@null"
                    app:srcCompat="@drawable/btn_stepper_plus" />

                <Button
                    android:id="@+id/item_cart_btn_delete"
                    style="?borderlessButtonStyle"
                    android:background="@color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/clear"
                    android:textColor="@color/btn_negative" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.bountyhunter.kudo.kudoposretail.activity.VoidActivity">
    <ImageView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/im_void_header"
        />

    <EditText
        style="@style/edittext_with_image"
        android:id="@+id/transaction_number_et"
        android:layout_marginTop="16dp"
        android:hint="No. Transaksi"
        android:inputType="number"
        android:drawableLeft="@drawable/ic_looks_one"
        app:layout_constraintTop_toBottomOf="@id/header"
        />

    <EditText
        style="@style/edittext_with_image"
        android:id="@+id/pin_et"
        android:layout_marginTop="1dp"
        android:hint="Verifikasi Password"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_lock_black_18dp"
        app:layout_constraintTop_toBottomOf="@id/transaction_number_et"
        />

    <Button
        android:id="@+id/void_button"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:background="@drawable/im_button_blue"
        android:text="Batalkan"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pin_et"
        tools:layout_editor_absoluteY="16dp" />

</android.support.constraint.ConstraintLayout>

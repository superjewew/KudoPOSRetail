<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bountyhunter.kudo.kudoposretail">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PosApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_pos"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CatalogActivity"
            android:label="Products Catalog"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.CartActivity"
            android:label="Cart"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.SelectPaymentActivity_"
            android:label="Pilih Metode"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.CardMethodActivity_"
            android:label="Kartu"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.EwalletMethodActivity_"
            android:label="E-Wallet"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.PinActivity_"
            android:label="PIN"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.VoidActivity"
            android:label="Pembatalan Transaksi"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.ProcessTransactionActivity" />
        <activity android:name=".activity.SettlementActivity"></activity>
    </application>

</manifest>